# Application
APP_NAME=Mobistory Backend
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://mobistory:mobistory_dev_password@localhost:5432/mobistory_db
# Para produção use async:
# DATABASE_URL=postgresql+asyncpg://mobistory:senha@localhost:5432/mobistory_db

# JWT Authentication
SECRET_KEY=sua-secret-key-super-secreta-aqui-mude-em-producao
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# OpenAI
OPENAI_API_KEY=sk-xxx

# CORS (adicione suas URLs)
CORS_ORIGINS=["http://localhost:8081","http://localhost:19006","exp://192.168.1.100:8081"]

# Storage (opcional - para upload de arquivos)
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# Para produção:
# ENVIRONMENT=production
# DEBUG=False
# DATABASE_URL=postgresql+asyncpg://user:senha@host:5432/db
# SECRET_KEY=gere-uma-chave-forte-com-openssl-rand-hex-32
